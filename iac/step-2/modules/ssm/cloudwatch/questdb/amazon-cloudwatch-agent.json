{
  "metrics": {
    "metrics_collected": {
      "cpu": {
        "resources": [ "*" ],
        "totalcpu": true,
        "measurement": [ "usage_active" ]
      },
      "disk": {
        "resources": [ "/" ],
        "measurement": [ "used" ]
      },
      "diskio": {
        "resources": [ "*" ],
        "measurement": [ "iops_in_progress" ]
      },
      "mem": {
        "measurement": [ "used_percent" ]
      }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/home/ec2-user/.questdb/log/**",
            "auto_removal": true,
            "retention_in_days": 30,

            "log_group_name": "questdb_{ip_address}",
            "log_stream_name": "questdb_{ip_address}",

            "timestamp_format": "%Y-%m-%d %H:%M:%S",
            "multi_line_start_pattern": "{timestamp_format}"
          }
        ]
      }
    },
    "log_stream_name": "questdb_{ip_address}"
  }
}
